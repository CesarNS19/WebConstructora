  <script>
    //script para mostrar en que ubicacion estoy y mostrarlo en el slidebar
    document.addEventListener('DOMContentLoaded', (event) => {
      //cargamos la url donde estamos ubicados
      cargarModulosFromPermissionOnMenu();
      const currentUrl = window.location.pathname;
    console.log(currentUrl);
      //seleccionamos el elemento al cual le cargaremos las clases
      const navLinks = document.querySelectorAll('.drop');
      
      //iteramos sobre los enlaces y si coinciden con la url actual les agregamos la clase active y si la colapsible esta abierta le agregamos show
      navLinks.forEach(link => {
        
        if (link.getAttribute("href") === currentUrl) {
          
          link.classList.add('active');
          const collapse = link.closest('.collapse');
          if (collapse) {
            collapse.classList.add('show');
            const toggle = document.querySelector(`a[href="#${collapse.id}"]`);
            if (toggle) {
              toggle.setAttribute('aria-expanded', 'true');
            }

          }
        }
      })
    });


    function logout(event) {
      event.preventDefault();
      document.getElementById('logoutForm').submit();
    }
    $(function () {
      var isFluid = JSON.parse(localStorage.getItem('isFluid'));
      var isRTL = JSON.parse(localStorage.getItem('isRTL'));
      var navbarStyle = localStorage.getItem("navbarStyle");

      if (isRTL) {
        var linkDefault = document.getElementById('style-default');
        var userLinkDefault = document.getElementById('user-style-default');
        linkDefault.setAttribute('disabled', true);
        userLinkDefault.setAttribute('disabled', true);
        document.querySelector('html').setAttribute('dir', 'rtl');
      } else {
        var linkRTL = document.getElementById('style-rtl');
        var userLinkRTL = document.getElementById('user-style-rtl');
        linkRTL.setAttribute('disabled', true);
        userLinkRTL.setAttribute('disabled', true);
      }
      if (isFluid) {
        var container = document.querySelector('[data-layout]');
        container.classList.remove('container');
        container.classList.add('container-fluid');
      }
      if (navbarStyle && navbarStyle !== 'transparent') {
        document.querySelector('.navbar-vertical').classList.add(`navbar-${navbarStyle}`);
      }


      if (localStorage.getItem('navbarPosition') === 'double-top') {
        document.documentElement.classList.toggle('double-top-nav-layout');
      }

    });
  </script>

